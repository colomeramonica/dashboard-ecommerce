generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String?
}

model Products {
  id String   @id @default(cuid())
    date DateTime
    sku String @unique
    name String
    color String
    size String
    price Float
    quantity Int
}

model Customers {
  id String   @id @default(cuid())
  name String
  email String
  image_url String?
  invoices Invoices[]
}

model Invoices {
  id String   @id @default(cuid())
  customer_id String
  customer Customers @relation(fields: [customer_id], references: [id])
  amount Float
  status String
  date DateTime
}

model Revenue {
  id String   @id @default(cuid())
  month String
  revenue Float
}
